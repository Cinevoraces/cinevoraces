{
  "include": [
    "src/**/*",
    "src/*",
    "test/**/*.test.ts",
    "test/**/*.ts",
    "test/*.ts"
, ],
  "exclude": ["dist"],
  "compilerOptions": {
    "types": ["@types/jest", "node"],
    "moduleResolution": "node",
    "target": "es2022",
    "module": "commonjs",
    "lib": ["es2022", "esnext.asynciterable"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "removeComments": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
  }
}
