{
    "include": [
        "src/**/*",
        "src/*",
        "tests/**/*.ts",
        "tests/*.ts",
        "./jest.config.ts",
    ],
    "exclude": [
        "dist",
        "node_modules"
    ],
    "compilerOptions": {
        "types": [
            "@types/jest",
            "node"
        ],
        "moduleResolution": "node",
        "target": "ES6",
        "module": "commonjs",
        "lib": [
            "ES6",
            "esnext.asynciterable"
        ],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "removeComments": true,
        "esModuleInterop": true,
        "incremental": true,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "dist",
        "paths": {
            "@src/*": [
                "src/*"
            ],
        }
    },
    "ts-node": {
        "require": [
            "tsconfig-paths/register"
        ]
    }
}