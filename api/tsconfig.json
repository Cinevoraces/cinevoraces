{
  "include": ["src/**/*", "src/*"],
  "exclude": ["dist", "test"],
  "compilerOptions": {
    "types": ["jest", "node"],
    "moduleResolution": "node",
    "target": "es2022",
    "module": "commonjs",
    "lib": ["es2022", "esnext.asynciterable"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "removeComments": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "@src/*": ["src/*"],
      "@modules/*": ["src/modules/*"],
      "@plugins/*": ["src/plugins/*"],
      "@types/*": ["src/types/*"],
      "@utils/*": ["src/utils/*"]
    }
  }
}
