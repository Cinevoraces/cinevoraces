{
  "include": [
    "src/**/*",
    "src/*",
    "test/**/*.ts",
    "test/*.ts",
    "./jest.config.ts",
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "compilerOptions": {
    "types": [
      "@types/jest",
      "node"
    ],
    "moduleResolution": "node",
    "target": "es2022",
    "module": "commonjs",
    "lib": [
      "es2022",
      "esnext.asynciterable"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "incremental": true,
    "removeComments": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
  }
}