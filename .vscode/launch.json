  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug API: Remote",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "localRoot": "${workspaceFolder}/api",
      "remoteRoot": "/api",
      "restart": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "skipFiles": ["<node_internals>/**/*.js"]
    },
    {
      "name": "Debug API: Local",
      "type": "node",
      "request": "attach",
      "processId": "${command:PickProcess}",
      "restart": true
    }
  ]
}
